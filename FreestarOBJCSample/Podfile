# Uncomment the next line to define a global platform for your project
platform :ios, '10.0'

USE_PREPROD = false
POD_TAGS = USE_PREPROD ?
  { :name_tag => '-PreRelease', :version_tag => '-alpha' } :
  { :name_tag => '', :version_tag => '' }

target 'FreestarOBJCSample' do
