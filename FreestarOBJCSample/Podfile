  pod "FreestarAds-Unity#{POD_TAGS[:name_tag]}", "~> 6.0#{POD_TAGS[:version_tag]}"
  pod "FreestarAds-Vungle#{POD_TAGS[:name_tag]}", "~> 5.0#{POD_TAGS[:version_tag]}"
  # pod "FreestarAds-Google#{POD_TAGS[:name_tag]}", "~> 4.0#{POD_TAGS[:version_tag]}" #incompatible with latest nimubs
  pod "FreestarAds-Criteo#{POD_TAGS[:name_tag]}", "~> 3.0#{POD_TAGS[:version_tag]}"
  pod "FreestarAds-GAM#{POD_TAGS[:name_tag]}", "~> 5.0#{POD_TAGS[:version_tag]}"
