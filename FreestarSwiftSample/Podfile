source 'https://github.com/CocoaPods/Specs.git'
# Uncomment the next line to define a global platform for your project
platform :ios, '10.0'
use_frameworks!

USE_PREPROD = false
POD_TAGS = USE_PREPROD ?
  { :name_tag => '-PreRelease', :version_tag => '-alpha' } :
  { :name_tag => '', :version_tag => '' }

target 'FreestarSwiftSample' do
  # Uncomment the next line if you're using Swift or would like to use dynamic frameworks  
  pod "FreestarAds#{POD_TAGS[:name_tag]}", "~> 5.7#{POD_TAGS[:version_tag]}"
  pod "FreestarAds-AdColony#{POD_TAGS[:name_tag]}", "~> 5.1#{POD_TAGS[:version_tag]}"
  pod "FreestarAds-Googleadmob#{POD_TAGS[:name_tag]}", "~> 6.5#{POD_TAGS[:version_tag]}"
  pod "FreestarAds-Tapjoy#{POD_TAGS[:name_tag]}", "~> 5.0#{POD_TAGS[:version_tag]}"
  pod "FreestarAds-Unity#{POD_TAGS[:name_tag]}", "~> 6.0#{POD_TAGS[:version_tag]}"
  pod "FreestarAds-Vungle#{POD_TAGS[:name_tag]}", "~> 5.2#{POD_TAGS[:version_tag]}"
  pod "FreestarAds-Google#{POD_TAGS[:name_tag]}", "~> 5.0#{POD_TAGS[:version_tag]}"
  pod "FreestarAds-Criteo#{POD_TAGS[:name_tag]}", "~> 3.0#{POD_TAGS[:version_tag]}"
  pod "FreestarAds-GAM#{POD_TAGS[:name_tag]}", "~> 5.5#{POD_TAGS[:version_tag]}"
  pod "FreestarAds-Nimbus#{POD_TAGS[:name_tag]}", "~> 3.6#{POD_TAGS[:version_tag]}"
  pod "FreestarAds-Mopub#{POD_TAGS[:name_tag]}", "~> 5.3#{POD_TAGS[:version_tag]}"
  pod "FreestarAds-AppLovin#{POD_TAGS[:name_tag]}", "~> 5.1#{POD_TAGS[:version_tag]}"
  pod "FreestarAds-TAM#{POD_TAGS[:name_tag]}", "~> 2.4#{POD_TAGS[:version_tag]}"
  pod "FreestarAds-Pangle#{POD_TAGS[:name_tag]}", "~> 1.1#{POD_TAGS[:version_tag]}"
  pod "FreestarAds-Hyprmx#{POD_TAGS[:name_tag]}", "~> 1.0#{POD_TAGS[:version_tag]}"

  # helper frameworks for feed view
  pod 'SnapKit', '~> 5.0.0'
  pod 'LoremIpsum', '~> 1.0'

end
