source 'https://github.com/CocoaPods/Specs.git'

platform :ios, '12.0'
use_frameworks!

target 'FreestarSwiftSample' do

  # M1 compatible
  pod 'FreestarAds-PreRelease', '~> 5.23.0-beta-2'

  pod 'FreestarAds-Prebid-PreRelease', '~> 2.0-beta'
  pod 'FreestarAds-Ogury2-PreRelease', '2.2.0.1-beta-4'
  pod 'FreestarAds-Yahoo-PreRelease', '~> 1.14-beta'
  pod 'FreestarAds-AppLovinMax-PreRelease', '~> 11.0-beta'
  pod 'FreestarAds-AppLovin-PreRelease', '~> 11.0-beta'
  pod 'FreestarAds-AdColony-PreRelease', '~> 4.7-beta'
  pod 'FreestarAds-Tapjoy-PreRelease', '~> 12.8-beta'
  pod 'FreestarAds-Criteo-PreRelease', '~> 4.3-beta'
  pod 'FreestarAds-TAM-PreRelease', '~> 4.6.0.6-beta'
  pod 'FreestarAds-Hyprmx-PreRelease', '~> 6.0-beta'
  pod 'FreestarAds-Hyprmx-PreRelease/MRAID', '~> 6.0-beta'
  pod 'FreestarAds-Googleadmob-PreRelease', '~> 10.0-beta'
  pod 'FreestarAds-Googleadmob-PreRelease/Facebook', '~> 10.0-beta'
  pod 'FreestarAds-GAM-PreRelease', '~> 10.0-beta'
  pod 'FreestarAds-GAM-PreRelease/Facebook', '~> 10.0-beta'
  pod 'FreestarAds-Unity-PreRelease', '~> 4.1-beta'
  pod 'FreestarAds-Fyber2-PreRelease', '~> 8.1-beta-1'
  pod 'FreestarAds-Nimbus-PreRelease', '~> 2.1.2.4-beta'
  
#  pod 'Firebase'

#  # Not M1 compatible
#  pod 'FreestarAds-Vungle-PreRelease', '~> 6.10.6.2-beta-2'
#  pod 'FreestarAds-Pangle-PreRelease', '~> 3.7-beta'
  # IMA SDK conflict with Nimbus adapter
#  pod 'FreestarAds-Google-PreRelease', '~> 3.13-beta'

  # helper frameworks for feed view
  pod 'SnapKit', '~> 5.0.0'
  pod 'LoremIpsum', '~> 1.0'
end

post_install do |installer|
    installer.generated_projects.each do |project|
          project.targets.each do |target|
              target.build_configurations.each do |config|
                  config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '12.0'
               end
          end
   end
end
